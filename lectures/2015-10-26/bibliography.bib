	journal = {Biological Psychiatry},
	author = {Hallahan, Brian and Newell, John and Soares, Jair C. and Brambilla, Paolo and Strakowski, Stephen M. and Fleck, David E. and Kieseppä, Tuula and Altshuler, Lori L. and Fornito, Alex and Malhi, Gin S. and McIntosh, Andrew M. and Yurgelun-Todd, Deborah A. and Labar, Kevin S. and Sharma, Verinder and MacQueen, Glenda M. and Murray, Robin M. and McDonald, Colm},
	month = feb,
