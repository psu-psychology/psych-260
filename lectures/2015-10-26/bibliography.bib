	journal = {Proceedings of the National Academy of Sciences},
	author = {Thompson, Paul M. and Vidal, Christine and Giedd, Jay N. and Gochman, Peter and Blumenthal, Jonathan and Nicolson, Robert and Toga, Arthur W. and Rapoport, Judith L.},
